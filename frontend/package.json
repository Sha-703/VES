{
  "name": "elections-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.32.0",
    "vite": "^7.2.4",
    "wait-on": "^7.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:package": "npm run build && electron-builder",
    "icon:generate": "node ./scripts/generate-icon.js"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.ves.elections",
    "productName": "VES Elections",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    }
  }
}
